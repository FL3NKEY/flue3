{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "rootDir": "./src",
        "outDir": "./lib",
        "baseUrl": "./src",
        "paths": {
            "#_FLUE3_UNIVERSAL_ENTRY": ["./app/entryClient.ts"],
            "#_FLUE3_APP_TARGET_ENTRY": ["./universalEntry/universalEntry.ts"],
            "#_FLUE3_APP_SSR_ENTRY": ["./app/entryServer.ts"],
            "virtual:flue3RuntimeConfig": ["./runtimeConfig/runtimeConfig.ts"],
        },
        "noEmit": false,
        "types": [
            "node",
            "vite/client"
        ],
        "declaration": true,
    },
    "files": [
        "./flue3.d.ts",
        "./src/index.ts",
        "./src/cli.ts",
        "./src/framework.ts",
        "./src/app/createApp.ts",
        "./src/app/entryClient.ts",
        "./src/app/entryServer.ts",
        "./src/app/server.ts",
    ],
}
